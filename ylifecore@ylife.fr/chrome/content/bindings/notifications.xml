  <!-- MAJ D'ADDONS DISPONIBLES -->
  <binding id="addons_update_available_top">
    <resources>
      <stylesheet src="chrome://ylifecore/skin/notifications.css"/>
    </resources>
    <content>
      <xul:hbox class="notification_box">
        <xul:image src="chrome://ylifecore/skin/notifications/internet.png" />
        <xul:vbox flex="1">
          <xul:label value="&addons;" class="title" />
          <xul:label value="&addons.update.available.top;" />
        </xul:vbox>
        <xul:vbox>
          <xul:spacer flex="1" />
          <xul:button xbl:inherits="notif_id=id" oncommand="Notifs.del('notifications_top',this.getAttribute('notif_id'));">
            <xul:image src="chrome://ylifecore/skin/icons/buttons/close.png" />
            <xul:spacer flex="1" />
            <xul:label value="&close;" />
          </xul:button>
          <xul:spacer flex="1" />
        </xul:vbox>
        <xul:vbox>
          <xul:spacer flex="1" />
          <xul:button oncommand="tabs.newAddons();">
            <xul:image src="chrome://ylifecore/skin/icons/buttons/update.png" />
            <xul:spacer flex="1" />
            <xul:label value="&addons.update;" />
          </xul:button>
          <xul:spacer flex="1" />
        </xul:vbox>
      </xul:hbox>
    </content>
  </binding>
